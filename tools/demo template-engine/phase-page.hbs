<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - AdjuvantIQ Demo Phase</title>
    <style>
        /* Phase page styles - similar to demo page but with phase-specific elements */
        .hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 4rem 0;
            text-align: center;
        }
        .progress-section {
            background: #f8f9fa;
            padding: 1rem 0;
        }
        .progress-bar {
            width: 100%;
            height: 8px;
            background: #e9ecef;
            border-radius: 4px;
            overflow: hidden;
        }
        .progress {
            height: 100%;
            background: linear-gradient(90deg, #667eea, #764ba2);
            width: 0%;
            transition: width 0.3s ease;
        }
        .phase-info {
            background: #f8f9fa;
            border-left: 4px solid #667eea;
            padding: 1.5rem;
            margin: 2rem 0;
            border-radius: 0 8px 8px 0;
        }
        .phase-navigation {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 2rem 0;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 8px;
        }
        .nav-button {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .nav-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }
        .nav-button.disabled {
            background: #ccc;
            cursor: not-allowed;
        }
        .content-section {
            padding: 3rem 0;
        }
        .persona-card {
            background: #f8f9fa;
            border-left: 4px solid #667eea;
            padding: 1.5rem;
            margin: 2rem 0;
            border-radius: 0 8px 8px 0;
        }
        .workflow-step {
            margin: 2rem 0;
            padding: 2rem;
            border: 1px solid #e9ecef;
            border-radius: 8px;
        }
        .step-header {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }
        .step-number {
            background: #667eea;
            color: white;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin-right: 1rem;
        }
        .user-input {
            background: #e3f2fd;
            border: 1px solid #2196f3;
            padding: 1rem;
            margin: 1rem 0;
            border-radius: 8px;
        }
        .system-analysis {
            background: #fff3e0;
            border: 1px solid #ff9800;
            padding: 1rem;
            margin: 1rem 0;
            border-radius: 8px;
        }
        .system-recommendations {
            background: #e8f5e8;
            border: 1px solid #4caf50;
            padding: 1rem;
            margin: 1rem 0;
            border-radius: 8px;
        }
        .expert-decision {
            background: #e8f5e8;
            border: 1px solid #4caf50;
            padding: 1rem;
            margin: 1rem 0;
            border-radius: 8px;
            position: relative;
        }
        .expert-decision::before {
            content: "üéØ KEY DECISION";
            position: absolute;
            top: -10px;
            left: 1rem;
            background: white;
            padding: 0 0.5rem;
            font-size: 0.8rem;
            font-weight: bold;
            color: #4caf50;
        }
        .reasoning-box {
            background: #fff3e0;
            border: 1px solid #ff9800;
            padding: 1rem;
            margin: 1rem 0;
            border-radius: 8px;
            cursor: pointer;
        }
        .engagement-tools {
            background: #f8f9fa;
            padding: 2rem;
            margin: 2rem 0;
            border-radius: 8px;
            text-align: center;
        }
        .back-link {
            display: inline-block;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            margin: 1rem 0;
            transition: all 0.3s ease;
        }
        .back-link:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }
    </style>
</head>
<body>
    <div class="hero">
        <div class="container">
            <h1>{{title}}</h1>
            <p class="lead">Phase {{phase_number}} of {{total_phases}}</p>
        </div>
    </div>

    <div class="progress-section">
        <div class="container">
            <div class="progress-bar">
                <div class="progress" id="progressBar"></div>
            </div>
            <div class="progress-text" id="progressText">Step 1 of {{workflow_steps.length}}</div>
        </div>
    </div>

    <div class="container">
        <div class="phase-info">
            <h3>Phase Overview</h3>
            <p>{{description}}</p>
        </div>

        <div class="content-section">
            {{#if persona}}
            <div class="persona-card">
                <div class="persona-title">{{persona.name}}, {{persona.role}}</div>
                <p><strong>Background:</strong> {{persona.bio}}</p>
                <p><strong>Challenge:</strong> {{persona.challenge}}</p>
            </div>
            {{/if}}

            {{#each workflow_steps}}
            <div class="workflow-step" data-step="{{step_number}}">
                <div class="step-header">
                    <div class="step-number">{{step_number}}</div>
                    <div class="step-title">{{step_title}}</div>
                </div>

                {{#if user_input}}
                <div class="user-input">
                    <strong>{{user_input.title}}:</strong><br>
                    {{user_input.content}}
                </div>
                {{/if}}

                {{#if system_analysis}}
                <div class="system-analysis">
                    <strong>{{system_analysis.title}}:</strong><br>
                    {{system_analysis.content}}
                </div>
                {{/if}}

                {{#if system_recommendations}}
                <div class="system-recommendations">
                    <strong>{{system_recommendations.title}}:</strong><br>
                    {{system_recommendations.content}}
                </div>
                {{/if}}

                {{#if key_decision}}
                <div class="expert-decision">
                    <strong>{{key_decision.title}}:</strong><br>
                    {{key_decision.content}}
                </div>
                {{/if}}

                {{#if ai_reasoning}}
                <div class="reasoning-box" onclick="toggleReasoning(this)">
                    <div class="reasoning-header">
                        {{ai_reasoning.title}}
                        <span class="expand-icon">+</span>
                    </div>
                    <div class="reasoning-details">
                        {{ai_reasoning.content}}
                    </div>
                </div>
                {{/if}}
            </div>
            {{/each}}
        </div>

        <div class="phase-navigation">
            {{#if prev_phase}}
            <a href="{{prev_phase}}.html" class="nav-button">‚Üê Previous Phase</a>
            {{else}}
            <span class="nav-button disabled">‚Üê Previous Phase</span>
            {{/if}}
            
            <a href="index.html" class="nav-button">Back to Demo Hub</a>
            
            {{#if next_phase}}
            <a href="{{next_phase}}.html" class="nav-button">Next Phase ‚Üí</a>
            {{else}}
            <span class="nav-button disabled">Next Phase ‚Üí</span>
            {{/if}}
        </div>

        <div class="engagement-tools">
            <h3>Ready to explore more?</h3>
            <a href="index.html" class="back-link">‚Üê Back to Demo Hub</a>
            <a href="../" class="back-link">‚Üê Back to AdjuvantIQ</a>
        </div>
    </div>

    <script>
        // Phase page functionality
        function toggleReasoning(element) {
            const details = element.querySelector('.reasoning-details');
            const icon = element.querySelector('.expand-icon');
            
            if (details.style.display === 'none' || !details.style.display) {
                details.style.display = 'block';
                icon.textContent = '-';
            } else {
                details.style.display = 'none';
                icon.textContent = '+';
            }
        }

        // Progress bar functionality
        function updateProgress() {
            const steps = document.querySelectorAll('.workflow-step');
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            
            const visibleStep = Array.from(steps).findIndex(step => {
                const rect = step.getBoundingClientRect();
                return rect.top <= window.innerHeight / 2 && rect.bottom >= window.innerHeight / 2;
            });
            
            if (visibleStep >= 0) {
                const progress = ((visibleStep + 1) / steps.length) * 100;
                progressBar.style.width = progress + '%';
                progressText.textContent = `Step ${visibleStep + 1} of ${steps.length}`;
            }
        }

        window.addEventListener('scroll', updateProgress);
        updateProgress(); // Initial call
    </script>
</body>
</html> 